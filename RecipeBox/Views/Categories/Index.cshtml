@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Category>;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

@foreach (Category category in Model)
{
  <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId }, new {@class = "content"})</li>
}

<p>@Html.ActionLink("Add new category", "Create", "Categories", null, new { @class = "btn btn-dark brn-large"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null,  new { @class = "btn btn-dark btn-large" } )</p>