@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model List<Category>

<h2>Your search results:</h2>

@if (Model.Count == 0)
{
  <p>Nothing found</p>  
}

@foreach (Category category in Model)
{
  <h3>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</h3>
}

<p>@Html.ActionLink("Return to Category list", "Index")<p>